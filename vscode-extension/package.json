{
  "name": "cross-platform-extension",
  "displayName": "Cross Platform Code Analyzer",
  "description": "A cross-platform code analyzer that works in VS Code and JetBrains IDEs",
  "version": "0.1.0",
  "publisher": "example-publisher",
  "engines": {
    "vscode": "^1.60.0"
  },
  "categories": [
    "Programming Languages",
    "Formatters",
    "Linters",
    "Database"
  ],
  "keywords": [
    "analyzer",
    "linter",
    "formatter",
    "cross-platform",
    "sqlite",
    "database"
  ],
  "galleryBanner": {
    "color": "#2C2C32",
    "theme": "dark"
  },
  "activationEvents": [
    "onCommand:cross-platform-extension.analyzeFile",
    "onCommand:cross-platform-extension.formatFile",
    "onCommand:cross-platform-extension.toggleServerMode",
    "onCommand:extension.openDatabaseManager",
    "onCommand:extension.analyzeCurrentFile"
  ],
  "main": "./out/extension.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/example/cross-platform-extension"
  },
  "homepage": "https://github.com/example/cross-platform-extension",
  "bugs": {
    "url": "https://github.com/example/cross-platform-extension/issues"
  },
  "contributes": {
    "commands": [
      {
        "command": "cross-platform-extension.analyzeFile",
        "title": "Cross-Platform: Analyze File"
      },
      {
        "command": "cross-platform-extension.formatFile",
        "title": "Cross-Platform: Format File"
      },
      {
        "command": "cross-platform-extension.toggleServerMode",
        "title": "Cross-Platform: Toggle Server Mode"
      },
      {
        "command": "extension.openDatabaseManager",
        "title": "SQLite: Open Database Manager"
      },
      {
        "command": "extension.analyzeCurrentFile",
        "title": "SQLite: Analyze Current File"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "cross-platform-extension.analyzeFile",
          "group": "cross-platform"
        },
        {
          "command": "cross-platform-extension.formatFile",
          "group": "cross-platform"
        },
        {
          "command": "extension.analyzeCurrentFile",
          "group": "sqlite"
        }
      ],
      "commandPalette": [
        {
          "command": "cross-platform-extension.toggleServerMode"
        },
        {
          "command": "extension.openDatabaseManager"
        },
        {
          "command": "extension.analyzeCurrentFile"
        }
      ]
    },
    "configuration": {
      "title": "Cross-Platform Extension",
      "properties": {
        "cross-platform-extension.useServerMode": {
          "type": "boolean",
          "default": false,
          "description": "Run the analyzer in server mode for better performance with frequent calls"
        },
        "cross-platform-extension.securityToken": {
          "type": "string",
          "default": "",
          "description": "Security token for server communication (leave empty to generate automatically)"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./ && node esbuild.js",
    "watch": "tsc -watch -p ./",
    "watch-webview": "node esbuild.js --watch",
    "pretest": "npm run compile",
    "test": "node ./out/test/runTest.js",
    "package": "vsce package",
    "publish": "vsce publish"
  },
  "dependencies": {
    "bundle-node-core": "file:../core",
    "node-fetch": "^2.6.7",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@types/glob": "^7.1.4",
    "@types/mocha": "^9.0.0",
    "@types/node": "^16.11.8",
    "@types/react": "^18.3.23",
    "@types/react-dom": "^18.3.7",
    "@types/vscode": "^1.60.0",
    "@vscode/test-electron": "^1.6.2",
    "esbuild": "^0.19.5",
    "glob": "^7.1.7",
    "mocha": "^9.1.3",
    "typescript": "^4.5.2",
    "vsce": "^2.0.0"
  }
}
