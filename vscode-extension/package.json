{
  "name": "cross-platform-extension",
  "displayName": "Cross Platform Code Analyzer",
  "description": "A cross-platform code analyzer that works in VS Code and JetBrains IDEs",
  "version": "0.1.0",
  "publisher": "example-publisher",
  "engines": {
    "vscode": "^1.60.0"
  },
  "categories": [
    "Programming Languages",
    "Formatters",
    "Linters"
  ],
  "keywords": [
    "analyzer",
    "linter",
    "formatter",
    "cross-platform"
  ],
  "icon": "media/icon.svg",
  "galleryBanner": {
    "color": "#2C2C32",
    "theme": "dark"
  },
  "activationEvents": [
    "onCommand:cross-platform-extension.analyzeFile",
    "onCommand:cross-platform-extension.formatFile",
    "onCommand:cross-platform-extension.toggleServerMode"
  ],
  "main": "./out/extension.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/example/cross-platform-extension"
  },
  "homepage": "https://github.com/example/cross-platform-extension",
  "bugs": {
    "url": "https://github.com/example/cross-platform-extension/issues"
  },
  "contributes": {
    "commands": [
      {
        "command": "cross-platform-extension.analyzeFile",
        "title": "Analyze File"
      },
      {
        "command": "cross-platform-extension.formatFile",
        "title": "Format File"
      },
      {
        "command": "cross-platform-extension.toggleServerMode",
        "title": "Toggle Server Mode"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "cross-platform-extension.analyzeFile",
          "group": "navigation"
        },
        {
          "command": "cross-platform-extension.formatFile",
          "group": "navigation"
        }
      ],
      "commandPalette": [
        {
          "command": "cross-platform-extension.toggleServerMode",
          "group": "cross-platform-extension"
        }
      ]
    },
    "configuration": {
      "title": "Cross-Platform Extension",
      "properties": {
        "cross-platform-extension.useServerMode": {
          "type": "boolean",
          "default": false,
          "description": "Run the analyzer in server mode for better performance with frequent calls"
        },
        "cross-platform-extension.securityToken": {
          "type": "string",
          "default": "",
          "description": "Security token for server communication (leave empty to generate automatically)"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile",
    "test": "node ./out/test/runTest.js",
    "package": "vsce package",
    "publish": "vsce publish"
  },
  "dependencies": {
    "bundle-node-core": "file:../core",
    "node-fetch": "^2.6.7"
  },
  "devDependencies": {
    "@types/glob": "^7.1.4",
    "@types/mocha": "^9.0.0",
    "@types/node": "^16.11.8",
    "@types/vscode": "^1.60.0",
    "@vscode/test-electron": "^1.6.2",
    "glob": "^7.1.7",
    "mocha": "^9.1.3",
    "typescript": "^4.5.2",
    "vsce": "^2.0.0"
  }
}
